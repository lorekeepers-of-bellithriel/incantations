        "babel-plugin-module-resolver": "^4.1.0",
        "concurrently": "^7.6.0",
        "nodemon": "^2.0.20",
        "rollup": "^3.9.0",
        "type-fest": "^3.5.0",
        "typescript": "^4.9.4"
