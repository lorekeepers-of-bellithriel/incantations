{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext"],
        "strict": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        // "declaration": true,
        // "emitDeclarationOnly": true,
        // "isolatedModules": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "outDir": "dist"
    },
    "compileOnSave": true,
    "include": [
        "src/main.ts"
        // todo: remove
        // "src/test.ts"
    ]
}
