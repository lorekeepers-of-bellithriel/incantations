{
    "name": "@lorekeepers-of-bellithriel/cna-incantation",
    "description": "Create Node App Incantation: Node.js + Typescript + Babel + esbuild + pkg",
    "type": "module",
    "private": true,
    "packageManager": "yarn@3.3.1",
    "main": "dist/main.js",
    "bin": {
        "build": "main.js build",
        "dev": "main.js dev",
        "setup": "main.js setup"
    },
    "scripts": {
        "compile": "rollup -c -w",
        "type-check": "tsc -w",
