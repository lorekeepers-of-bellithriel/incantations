        "dev": "nodemon --inspect",
        "test": "npx ."
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "nodemon": "^2.0.20"
    },
    "dependencies": {
        "@babel/cli": "^7.20.7",
